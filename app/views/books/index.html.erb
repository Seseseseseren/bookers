<h2>Books</h2>
<h3>Title</h3>
<h3>Body</h3>

<% @books.each do |book| %>
  <span><%= book.title %></span>
  <span><%= book.body %></span>
  
  <%= link_to "Show", "/books/#{book.id}" %>
  <%= link_to "Edit", "/books/#{book.id}/edit" %>
  <%= link_to "Destroy", "/books/#{book.id}", method: :delete, data: { confirm: 'Are you sureï¼Ÿ' } %>
  
<% end %>

<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book,local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  
<% end %>